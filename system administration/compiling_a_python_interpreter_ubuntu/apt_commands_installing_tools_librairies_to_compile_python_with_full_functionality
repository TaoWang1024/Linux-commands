# first, we install the tools and libraries necessary to compile the python interpreter on ubuntu
sudo apt install vim libffi-dev zlib1g-dev tklib libreadline-dev python3-tk python3-tk-dbg tix liblzma-dev libblkid-dev lib64readline-dev build-essential libssl-dev checkinstall libncursesw5-dev libsqlite3-dev tk-dev libgdbm-dev libc6-dev libbz2-dev

# second, we install the libraries the python interpreter needs for full functionality
sudo apt install vim xz-utils libffi-dev zlib1g-dev tklib libreadline-dev python3-tk python3-tk-dbg tix liblzma-dev libblkid-dev lib64readline-dev build-essential libssl-dev checkinstall libncursesw5-dev libgdbm-compat-dev libsqlite3-dev tk-dev libgdbm-dev libc6-dev libbz2-dev
